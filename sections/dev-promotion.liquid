{{  'dev-asset.css' | asset_url | stylesheet_tag}}

<h2 class="dev-promotion-title" style="text-align: {{ section.settings.text_alignment }};">{{ section.settings.title }}</h2>

<div class="dev-promotion-section">
  {% for block in section.blocks %}
    {% if block.type == 'promotion' %}
    <div class="dev-promotion-block">
        <h3>{{ block.settings.title }}</h3>
        {{ block.settings.image | image_url: width: 200 | image_tag }}
    </div>
    {% endif %}
  {% endfor %}
</div>
  
{% schema %}
  {
    "name": "Dev Promotion",
    "tag": "section",
    "class": "dev-promotion-section",
    "disabled_on": {
    "groups": ["header", "footer"]},
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Seasonal Promotion",
        "info": "Promotion text to display",
        "placeholder": "Title of the promotion"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
          "value": "left",
          "label": "Left"
          },
          {
          "value": "center",
          "label": "Center"
          },
          {
          "value": "right",
          "label": "Right"
          }
        ],
        "default": "left",
      },
    ],
    "blocks": [
      {
        "type": "promotion",
        "name": "Promotion",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
        ]
      },
    ],
    "presets": [
      {
        "name": "Dev Promotion",
        "category": "Custom"
      }
    ],
  }
{% endschema %}
